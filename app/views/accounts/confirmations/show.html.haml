.row.equal-heights{:style => "text-align: center;margin-top:30px;height:400px;"}
  
  = form_for(resource, :as => resource_name, :url => update_account_confirmation_path(resource_name), :method => :put) do |f|    
    %fieldset
      %legend 
        Account Activation
        - if resource.email
          for #{resource.email}
      %br/      
      .control-group
        .controls
          .h5{:style => "margin:auto;width:224px;text-align:left;"}Name:
          = f.text_field :name, placeholder: :name          
      .control-group
        .controls
          .h5{:style => "margin:auto;width:224px;text-align:left;"}Password:
          = f.password_field :password, placeholder: :password
      .control-group
        .controls
          .h5{:style => "margin:auto;width:224px;text-align:left;"}Confirm Password:
          = f.password_field :password_confirmation, placeholder: "password confirmation"   
        = hidden_field_tag :confirmation_token, @confirmation_token                    
      %br/
      %br/            
      .control-group
        .controls
          = f.submit "Activate", :class => "btn btn-large btn-success"
 

