= render 'layouts/messages'  
.row.equal-heights{:style => "text-align: center;margin-top:30px;height:600px;"}
  
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|    
    %fieldset
      %legend Sign up
      %br/
      .control-group
        .controls          
          .h5{:style => "margin:auto;width:224px;text-align:left;"}Email:
          = f.email_field :email, placeholder: :email
      .control-group
        .controls
          .h5{:style => "margin:auto;width:224px;text-align:left;"}Name:
          = f.text_field :name, placeholder: :name          
      .control-group
        .controls
          .h5{:style => "margin:auto;width:224px;text-align:left;"}Password:
          = f.password_field :password, placeholder: :password
      .control-group
        .controls
          .h5{:style => "margin:auto;width:224px;text-align:left;"}Confirm password:
          = f.password_field :password_confirmation, placeholder: "password confirmation"   

      .control-group
        .controls
          = f.submit "Sign up", :class => "btn btn-large btn-success trigger_js_event", :btn_type => "registration"
  %div{:style=>"display:block;"}
    %a{:href => "/accounts/sign_in"} Already registered ?
  %div{:style=>"display:block;"}


