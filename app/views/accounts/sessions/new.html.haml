.main_nav
  %ul
    %li
      %a.scroll{:href => "/"} Home
    %li
      %a.scroll{:href => "/accounts/sign_up"} Sign Up
    %li
      %a.scroll{:href => "/accounts/password/new"} Forgot Password
    %li
      %a.scroll{:href => "/accounts/confirmation/new"} Resend Confirmation
    %li
      %a.scroll{:href => "/accounts/unlock/new"} Unlock Account
.row.equal-heights{:style => "text-align: center;"}
  
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    = devise_error_messages!
    %fieldset
      %legend Sign in
      %br/
      .control-group
        .controls
          = f.email_field :email, placeholder: :email
      .control-group
        .controls
          = f.password_field :password, placeholder: :password
      .control-group
        .controls
          - if devise_mapping.rememberable?
            %p              
              = f.check_box :remember_me
                
      .control-group
        .controls
          = f.submit "Sign in", :class => "btn btn-primary"

  