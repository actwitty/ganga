.row.equal-heights{:style => "text-align: center;"}
  .span4.offset4
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { class: "form-inline", method: :post }) do |f|
    = display_error_messages!
    %fieldset
      %legend Forgot your password?
      %br/
      .control-group
        .controls
          = f.email_field :email, placeholder: :email
      .control-group
        .controls
          = f.submit "Send me reset password instructions",class: "btn btn-primary"
    = render "users/links"