{{view App.InlineAlertView }}

{{#eachSortedParam view.action.desc.type view.action.desc.api view.params}}  
  

    {{#if iter_val.new_head}}
      <div class="coalese">
        <div class="head">{{iter_val.head}}</div>
    {{/if}}

    <!--TODO: This is inefficient to not have if else but its ok, will fix later -->
    {{#isNumeric view.action.desc.type  view.action.desc.api iter_key}}
      <div class="entry {{getvalue iter_val.class}}">
        <div class="key">
          {{getTemplatePlaceHolder view.action.desc.type view.action.desc.api iter_key}}
        </div>
        <div class="value">          
          {{#paramBind iter_key}}            
            {{view App.RequiredNumberOnly name="Numeric field" valueBinding=bindVal class="in" }}
          {{/paramBind}}
        </div>
      </div>
    {{/isNumeric}}

    {{#isFont view.action.desc.type view.action.desc.api iter_key}}
      <div class="entry {{getvalue iter_val.class}}">
        <div class="key">
          {{getTemplatePlaceHolder view.action.desc.type view.action.desc.api iter_key}}
        </div>
        <div class="value">      
          {{#paramBind iter_key}}    
            {{view Ember.Select
              contentBinding="App.templateConstants.fixedVals.font"
              selectionBinding=bindVal
              class="select2Props in"}}
          {{/paramBind}}
        </div>
      </div>
    {{/isFont}}   

    
    {{#isAlign view.action.desc.type view.action.desc.api iter_key}}
      <div class="entry {{getvalue iter_val.class}}">
        <div class="key">
          {{getTemplatePlaceHolder view.action.desc.type view.action.desc.api iter_key}}
        </div>
        <div class="value"> 
          {{#paramBind iter_key}}              
            {{view Ember.Select
                contentBinding="App.templateConstants.fixedVals.align"
                selectionBinding=bindVal
                class="select2Props in"}}
          {{/paramBind}}
        </div>
      </div>        
    {{/isAlign}}

    {{#isString  view.action.desc.type view.action.desc.api iter_key}}
      <div class="entry {{getvalue iter_val.class}}">
        <div class="key">
          {{getTemplatePlaceHolder view.action.desc.type view.action.desc.api iter_key}}
        </div>
        <div class="value">
          {{#paramBind iter_key}}    
            {{view App.RequiredAFTextField valueBinding=bindVal class="in"}}
          {{/paramBind}}
        </div>
      </div>        
    {{/isString}}    

    {{#isVString  view.action.desc.type view.action.desc.api iter_key}}
      <div class="entry {{getvalue iter_val.class}}">
        <div class="key">
          {{getTemplatePlaceHolder view.action.desc.type view.action.desc.api iter_key}}
        </div>
        <div class="value">
          {{#paramBind iter_key}}              
            {{view Ember.TextArea valueBinding=bindVal class="in" }}
          {{/paramBind}}
        </div>
      </div>        
    {{/isVString}}       

    {{#isUrl view.action.desc.type view.action.desc.api iter_key}}
      <div class="entry {{getvalue iter_val.class}}">
        <div class="key">
          {{getTemplatePlaceHolder view.action.desc.type view.action.desc.api iter_key}}
        </div>
        <div class="value">
          {{#paramBind iter_key}}  
            {{view App.RequiredUrlField name="URL " valueBinding=bindVal class="in"}}
          {{/paramBind}}
        </div>
      </div>        
    {{/isUrl}}

    {{#isImg view.action.desc.type view.action.desc.api iter_key}}
      <div class="entry {{getvalue iter_val.class}}">
        <div class="key">
          {{getTemplatePlaceHolder view.action.desc.type view.action.desc.api iter_key}}
        </div>
        <div class="value">
          {{#paramBind iter_key}}  
            {{view App.RequiredUrlField name="URL " valueBinding=bindVal class="in"}}
          {{/paramBind}}
        </div>
      </div>        
    {{/isImg}}

    {{#isColor view.action.desc.type view.action.desc.api iter_key}}
      <div class="entry {{getvalue iter_val.class}}">
        <div class="key">
          {{getTemplatePlaceHolder view.action.desc.type view.action.desc.api iter_key}}
        </div>
        <div class="value">          
          {{#paramBind iter_key}}
            {{view App.RequiredAFTextField valueBinding=bindVal class="colorpickerProps in"}}
          {{/paramBind}}
        </div>
      </div>
    {{/isColor}}

    {{#isWeight view.action.desc.type view.action.desc.api iter_key}}
      <div class="entry {{getvalue iter_val.class}}">
        <div class="key">
          {{getTemplatePlaceHolder view.action.desc.type view.action.desc.api iter_key}}
        </div>
        <div class="value"> 
          {{#paramBind iter_key}}              
            {{view Ember.Select
                contentBinding="App.templateConstants.fixedVals.weight"
                selectionBinding=bindVal
                class="select2Props in"}}
          {{/paramBind}}
        </div>
      </div>        
    {{/isWeight}}

  {{#if iter_val.last_tail}}
      {{#if iter_val.show_all}}
        <div class="more show" {{action "showHards" view.rule target="App.actionView"}}>Edit the settings for {{iter_val.head}}</div>  
        {{else}}
          {{#if iter_val.show_more}}
            <div class="more show" {{action "showHards" view.rule target="App.actionView"}}>More settings for {{iter_val.head}}</div>
          {{/if}}
      {{/if}}
      
    </div>
  {{/if}}  

  
{{/eachSortedParam}}