  <div class="action_box"><!-- Template config main box starts --> 
    <div class="event_selector">      
      <h5> Select action</h5>
      <select class="select2Props action_sel" {{action "selectActionType" view.rule target="App.actionView"}}>
        
        {{#eachProperty view.typeChoices}}    

          {{#ifequal view.rule.action.desc.type iter_key}}
            <option  value="{{getvalue iter_key}}" selected >{{getvalue iter_key}}</option>
          {{else}}
            <option value="{{getvalue iter_key}}" >{{getvalue iter_key}}</option>
          {{/ifequal}}
        {{/eachProperty}}
      </select>
    </div>


    <div class="event_selector">
      <h5> Select action type</h5>            
      <select class="select2Props action_sel" {{action "selectActionApi" view.rule target="App.actionView"}}>
        
        {{#eachProperty view.apiChoices}}              
          
          {{#ifequal view.rule.action.desc.api iter_key}}            
            <option  value="{{getvalue iter_key}}" selected >
              {{getApiName view.rule.action.service.name view.rule.action.desc.type view.rule.action.desc.api}}
            </option>
          {{else}}
            <option value="{{getvalue iter_key}}" >
              {{getApiName view.rule.action.service.name view.rule.action.desc.type view.rule.action.desc.api}}
            </option>
          {{/ifequal}}
        {{/eachProperty}}
      </select>
    </div>

     <div class="event_selector">     
      <h5>  <i class="icon-time"></i> Set delay in seconds</h5>      
       {{view App.RequiredNumberOnly name="Delay field" valueBinding="view.rule.action.timer.delay" class="in" }}
    </div>



    <h5>Action Configuration</h5>
    <div class="preview" >
      <div class='btn btn-large btn-inverse' {{action "showActionPreview" view.rule target="App.actionView"}}> 
        Preview
      </div>
    </div>

    <div {{bindAttr class="view.showParamDecker"}}>  


      <div class='action_config_box'>
        {{view App.TemplateActionParamsView actionBinding="view.rule.action" paramsBinding="view.rule.action.params"}}

      </div> <!-- Template vars config list ends -->
    </div> <!-- Decker ends -->
    <div class="decker_boundary">  
      <div {{bindAttr class="view.showDeckerControl"}} {{action "manageDeckerMinimize" target="App.actionView"}}> </div>
    </div>
  </div> <!-- Template config main box ends -->