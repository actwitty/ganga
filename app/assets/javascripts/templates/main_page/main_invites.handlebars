<div id="well" class="row well">

	<div class="span4">	
		<div id="request-invite" class="form-inline">
			<form accept-charset="UTF-8" action="/accounts" class="simple_form form-inline" id="new_user" method="post" novalidate="novalidate">
				<label style="display: block;">Launching soon.</label>
				<div class="input-prepend">
					<span class="add-on"><i class="icon-envelope"></i></span>
					<input id="account_email" name="account_email" placeholder="Your email address..." size="30" type="text" value="">
				</div>

				<input class="btn btn-primary" id="invitation_button" {{action "addInviteAccount" target="App.mainInviteView"}} value="Notify Me">
				<p class="help-block">No spam. Just a heads up when we're ready for you.</p>
			</form>
		</div>
	</div>
</div>